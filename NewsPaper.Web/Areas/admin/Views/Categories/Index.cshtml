@{
    ViewBag.Title = "Category";
    Layout = "~/Areas/admin/Views/Shared/AdminLayout.cshtml";
}
@section scripts{
    <script src="~/Scripts/web/category/categories.js"></script>
}
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Tables</h1>
    <p class="mb-4">DataTables is a third party plugin that is used to generate the demo table below. For more information about DataTables, please visit the <a target="_blank" href="https://datatables.net">official DataTables documentation</a>.</p>
    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <a href="#" class="btn btn-primary btn-icon-split" id="btnCreate">

                <span class="text">Tạo mới</span>
            </a>
            <a href="#" class="btn btn-success btn-icon-split" id="btnUpdate">

                <span class="text">Cập nhật</span>
            </a>
            <a href="#" class="btn btn-danger btn-icon-split" id="btnDetele">

                <span class="text">Xóa</span>
            </a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Tên Thể Loại</th>
                            <th>Mô tả</th>
                            <th>Ngày tạo</th>
                            <th>Ngày cập nhật</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Show Modal-->
@{
    Html.RenderPartial("_ModalLayout");
}